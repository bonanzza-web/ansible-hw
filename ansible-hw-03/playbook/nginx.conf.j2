worker_processes  1;
user              {{ ansible_user }};

events {
    worker_connections  1024;
}

error_log         /var/log/nginx/error.log info;
pid               /var/run/nginx.pid;

http {

    include       mime.types;
    charset       utf-8;

    access_log    /var/log/nginx/access.log  combined;

    server {
        server_name   localhost;
        listen        80;


        location      / {
            root      html;

        }

        include conf.d/lighthouse.conf;


    }


}